#; === General options ===
#; Forwarded port to the host machine (your computer). Adjust if needed
HTTP_PORT=8080
#; PDO connection URI. Can be changed to use other backends if desired.
PDO_URI=sqlite:/usr/data/methods.db

#; === Authentication options ===
#; Generate a custom password hash for authentication
#; php -r 'echo password_hash("<NEW_PASS>", PASSWORD_DEFAULT);'
AUTH_USER=admin
AUTH_HASH=

#; === Internal options ===
#; Do not edit these lines when using the default docker-compose set up
API_SERVER=http://nginx/api/
DB_SERVER=http://nginx/admin/
UI_SERVER=http://nginx/
